#!/bin/zsh

# Clear port
cport() {
  local port=$1
  if [ -z "$port" ]; then
    echo "Usage: cport <port>"
    return 1
  fi

  local pid=$(lsof -t -i :"$port")
  if [ -z "$pid" ]; then
    echo "No process found on port $port"
    return 1
  fi

  kill -9 "$pid"
  echo "Process on port $port (PID: $pid) killed"
}

# Fuzzy find thoughts with preview (searches global ~/thoughts repo)
# Usage: thought          - browse all thoughts
#        thought <query>  - search content, then fuzzy filter
thought() {
  local query="${1:-}"
  local searchdir="$HOME/thoughts"

  if [[ ! -d "$searchdir" ]]; then
    echo "No thoughts repository found at $searchdir"
    return 1
  fi

  local result
  if [[ -n "$query" ]]; then
    # Content search mode
    result=$(rg --files-with-matches --no-messages "$query" "$searchdir" | \
      fzf --query="$query" \
          --preview "bat --style=numbers --color=always {} 2>/dev/null || head -50 {}" \
          --preview-window=right:60%)
  else
    # File browse mode
    result=$(find "$searchdir" -type f -name "*.md" -not -path "*/.git/*" 2>/dev/null | \
      fzf --preview "bat --style=numbers --color=always {} 2>/dev/null || head -50 {}" \
          --preview-window=right:60%)
  fi

  [[ -n "$result" ]] && echo "$result"
}
