#!/bin/zsh

# Clear port
cport() {
  local port=$1
  if [ -z "$port" ]; then
    echo "Usage: cport <port>"
    return 1
  fi

  local pid=$(lsof -t -i :"$port")
  if [ -z "$pid" ]; then
    echo "No process found on port $port"
    return 1
  fi

  kill -9 "$pid"
  echo "Process on port $port (PID: $pid) killed"
}
